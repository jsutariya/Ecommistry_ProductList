<?xml version="1.0"?>
<config>
	  <tabs>
		<ecommistry translate="label" module="productlist">
            <label>Ecommistry</label>
            <sort_order>300</sort_order>
        </ecommistry>
	  </tabs>
	  <sections>
		<product_list  translate="label" module="productlist">                    
		<label>Product List</label>
		<tab>ecommistry</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <general translate="label"> 
					  <label>General Settings</label>
					  <frontend_type>text</frontend_type>
					  <sort_order>0</sort_order>
					  <show_in_default>1</show_in_default>
					  <show_in_website>1</show_in_website>
					  <show_in_store>1</show_in_store>
				       <fields>
                          <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </enabled>
                          <product_count translate="label">
                            <label>Products to display</label>
							<frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Add number of products to show on product list page</comment>
                          </product_count>
						  <column_count translate="label">
                            <label>Columns to display</label>
							<frontend_type>text</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Number of columns to display on list page</comment>
                          </column_count>
						  <view_mode translate="label">
                            <label>Default View Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Ecommistry_ProductList_Model_ViewType</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </view_mode>
						  <page_title translate="label">
                            <label>Product Page Title</label>
							<frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </page_title>
						  <page_url translate="label">
                            <label>Product Page URL</label>
							<frontend_type>text</frontend_type>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </page_url>
						  <login_required_error_message translate="label">
                            <label>Required Login Message</label>
							<frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </login_required_error_message>
					   </fields>
					   </general>
					</groups>
		</product_list>
	  </sections>
</config>
